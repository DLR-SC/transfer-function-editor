{
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "commonjs",
      "sourceMap": true
    },
    "include": [
      "test/**/*"
    ]
  },
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "noEmit": true,
    "declaration": true,
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "include": [
    "@types/**/*",
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}